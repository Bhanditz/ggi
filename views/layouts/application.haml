!!!
%html
  %head
    %title GGI Knowledge Portal
    %meta{ name: 'viewport', content: 'width=device-width' }
    != css :application, :media => 'screen'
    != js :app
  %body{ class: request.path_info.split('/').compact.empty? ? 'root' : request.path_info.split('/').compact.first.to_s }
    .page
      %header.page__header
        .page__bucket
          .site-title
            %h1
              %a{ href: '/'}
                Global Genome Initiative Knowledge Portal
                %small  Beta
            %p.subhead Preserving and Understanding the Genomic Diversity of Life on Earth
          %nav.site-navigation
            %ul
              %li
                %a{ href: "/about" }
                  - if request.path_info == "/about"
                    %strong About GGI
                  - else
                    About GGI
              %li
                %a{ href: "/help" }
                  - if request.path_info == "/help"
                    %strong Help
                  - else
                    Help
              %li
                %a{ href: "/downloads" }
                  - if request.path_info == "/downloads"
                    %strong Downloads
                  - else 
                    Downloads
              %li
                %a{ href: "mailto:ggi@si.edu" } Contact Us
      = yield
      %footer.page__footer
        .page__bucket
          %h2 Sponsors
          %ul
            %li
              %a.footer__link--ggi{ href: 'http://ggi.si.edu'}
                %img{ src: '/images/smithsonian-ggi-logo.png', alt: "Smithsonian National Museum of Natural History Global Genome Initiative"}
            %li
              %a.footer__link--eol{ href: 'http://eol.org' }
                %img{ src: '/images/powered-by-eol.png', alt: "Powered by the Encyclopedia of Life"}
