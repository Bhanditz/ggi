#!/user/bin/env ruby
# ^ For syntax highlighting.

source 'https://rubygems.org'

gem 'compass'  # A package manager for sass
gem 'haml'  # HTML markup
gem 'rack'  # Middleware for Sinatra
gem 'rack-test'  # Allows rack use in testing
gem 'rake'  # Ruby tasks for command-line invocation
gem 'sass'  # CSS Markup
gem 'sinatra'  # If you don't know what this is, you probably should be here.
gem 'unicorn'  # Web server.  We'll use this since we're familiar with it.

group 'development' do
  gem 'debugger'  # Duh.
end

group 'test' do
  gem 'capybara'  # Makes testing websites much easier
  gem 'capybara-webkit' # Headless JS-aware browser for capybara
  gem 'rspec'  # Testing framework allowing "specifications"
end
